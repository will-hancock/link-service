{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": false,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist/",
    "test/"
  ],
  "lib": [
    "es2015",
    "dom"
  ],
  "paths": {
    "*": [
      "typings/*"
    ]
  }
}
